---
export async function getStaticPaths() {
  return [
    { params: { protected: 'admin' } },
    { params: { protected: 'dashboard' } },
    { params: { protected: 'settings' } },
  ];
}

const { protected: protectedSlug } = Astro.params;
---

<html>
  <head>
    <title>Protected Page</title>
    <link rel="stylesheet" href="/src/styles/global.css">
  </head>
  <body class="font-sans bg-slate-50 m-0 p-0">
    <div class="max-w-lg mx-auto mt-12 bg-white rounded-2xl shadow-lg shadow-black/5 px-8 py-10 text-center">
      <h1 class="text-blue-500 text-3xl mb-6 font-normal">{protectedSlug} Page</h1>
      <div class="text-slate-500 text-lg mb-8">
        If you see this page, it means the middleware allowed access. 
      </div>
    </div>
  </body>
</html>
