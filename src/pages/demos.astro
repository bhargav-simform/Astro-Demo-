---
const demos = [
  { title: 'Pages & Routing', path: '/demos/demo_01_pages_routing/' },
  { title: 'Layouts & Partials', path: '/demos/demo_02_layouts_partials/' },
  { title: 'Astro Components', path: '/demos/demo_03_astro_components/' },
  { title: 'Framework Components', path: '/demos/demo_04_framework_components/' },
  { title: 'Data Fetching & Collections', path: '/demos/demo_05_data_fetching_collections/' },
  { title: 'Client Directives & Hydration', path: '/demos/demo_07_client_directives_hydration/' },
  { title: 'API Endpoints & Serverless', path: '/demos/demo_08_api_endpoints_serverless/' },
  { title: 'Image Optimization & Assets', path: '/demos/demo_09_image_optimization_assets/' },
  { title: 'Advanced Routing & Middleware', path: '/demos/demo_10_advanced_routing_middleware/' },
];
---
<html>
  <head><title>Astro Demos Menu</title></head>
  <body style="font-family:sans-serif;max-width:600px;margin:2rem auto;">
    <h1>Astro.js Demos</h1>
    <p>Select a topic to view the demo:</p>
    <ul style="list-style:none;padding:0;">
      {demos.map(demo => (
        <li style="margin:1rem 0;">
          <a href={demo.path} style="display:block;padding:1rem;background:#f5f5f5;border-radius:8px;text-decoration:none;color:#333;font-weight:bold;box-shadow:0 1px 4px #0001;transition:background 0.2s;" onmouseover="this.style.background='#e0e7ff'" onmouseout="this.style.background='#f5f5f5'">
            {demo.title}
          </a>
        </li>
      ))}
    </ul>
  </body>
</html>
